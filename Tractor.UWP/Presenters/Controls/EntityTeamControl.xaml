<UserControl
    x:Class="Tractor.UWP.Presenters.Controls.EntityTeamControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tractor.UWP.Presenters.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinHeight="40"
    d:DesignHeight="40"
    d:DesignWidth="256">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <local:EntityView/>
        <AppBarButton
            Grid.Column="1"
            Icon="Edit"
            Style="{ThemeResource CommandBarFlyoutAppBarButtonStyle}"
            />
        <AppBarButton
            Grid.Column="2"
            Icon="Delete"
            Style="{ThemeResource CommandBarFlyoutAppBarButtonStyle}"
            />
    </Grid>
</UserControl>